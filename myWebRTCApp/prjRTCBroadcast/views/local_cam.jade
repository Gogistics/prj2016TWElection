div(class="localStream" ng-controller="LocalStreamController as localStream")
  p #{username}:
    input(ng-model="localStream.name")
  video(id="localVideo" muted="muted" autoplay="true")
  li(ng-click="localStream.toggleCam()")
    a(href="#") {{ localStream.cameraIsOn ? 'Stop' : 'Start' }}

  div(ng-show="localStream.cameraIsOn")
    p #{share}
    a {{ localStream.link }}