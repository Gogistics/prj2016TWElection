div(class="remoteStream" ng-controller="RemoteStreamsController as rtc")
  h3 Remote Customer List
  div(id="remoteVideosContainer")
  table
    thead
      tr
        th Stream
        th 1-Way
        th 2-Way
    tbody
      tr(ng-repeat="stream in rtc.remoteStreams" ng-class="{ 'selected' : stream.isPlaying }")
        td
          a {{stream.name}}
        td(ng-click="rtc.view(stream)")
          a View
        td(ng-click="rtc.call(stream)")
          a Call

  li(ng-click="rtc.loadData()" style="width: 240px;")
    a(href="#") Refresh