            div(class="inner")
              h3 #{tw_election_info.love4tw.name}
              p(class="subtitle") #{tw_election_info.love4tw.role}
              div(class="avatar text-center")
                img(src="/public/images/james-soong-1.png" alt="alan_tai" class="img-responsive img-circle")
