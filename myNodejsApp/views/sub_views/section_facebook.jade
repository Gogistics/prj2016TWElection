            div(class="inner")
              h3 #{tw_election_info.llchu.name}
              p(class="subtitle") #{tw_election_info.llchu.role}
              div(class="avatar text-center")
                img(src="/public/images/eric-chu-1.png" alt="alan_tai" class="img-responsive img-circle")
              br
              div(id="latest_post_llchu" class="fb_latest_post_info")

      // james soong
      div(class="col-xs-12 col-sm-6 col-md-6 col-lg-3")
        div(class="wow bounceInUp" data-wow-delay="0.2s")
