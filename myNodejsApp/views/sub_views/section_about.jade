section(id="about" class="home-section text-center")
  div(class="heading-about")
    div(class="container")
      div(class="row")
          div(class="col-lg-8 col-lg-offset-2")
            div(class="wow bounceInDown" data-wow-delay="0.2s")
              div(class="section-heading")
                  h2 #{about}
                  i(class="fa fa-2x fa-angle-down")
              p #{about_description}

    div(class="container")
      div(class="row")
        div(class="col-lg-2 col-lg-offset-5")
          hr(class="marginbot-50")

    div(class="container")
      div(class="row")
        div(class="col-xs-12 col-sm-12 col-md-3 about_cell")
        div(class="col-xs-12 col-sm-6 col-md-3 about_cell")
          div(class="wow bounceInUp" data-wow-delay="0.2s")
            div(class="team boxed-grey")
              div(class="inner")
                h3 #{teammate_alan.name}
                p(class="subtitle") #{teammate_alan.role}
                div(class="avatar text-center")
                  img(src="/public/frontend_1/img/team/alan_tai.png" alt="alan_tai" class="img-responsive img-circle")
                p #{teammate_alan.description}
        div(class="col-xs-12 col-sm-6 col-md-3 about_cell")
          div(class="wow bounceInUp" data-wow-delay="0.2s")
            div(class="team boxed-grey")
              div(class="inner")
                h3 #{teammate_henry.name}
                p(class="subtitle") #{teammate_henry.role}
                div(class="avatar text-center")
                  img(src="/public/frontend_1/img/team/henry_lin.jpg" alt="henry_lin" class="img-responsive img-circle")
                p #{teammate_henry.description}
        div(class="col-xs-12 col-sm-12 col-md-3 about_cell")